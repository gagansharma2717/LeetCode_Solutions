class Solution {
    public void traversal(TreeNode node, List<Integer> res){
        if(node == null) return;

        traversal(node.left, res);
        traversal(node.right, res);

        res.add(node.val);
    }

    public List<Integer> postorderTraversal(TreeNode node) {
        List<Integer> res = new ArrayList<>();

        traversal(node, res);

        return res;
    }
}