// 49.
// 37. LeetCode https://leetcode.com/problems/sudoku-solver/

class Solution {
    public boolean isValid(char[][] board, int row, int col, char ch){
         
          // row element
        for(int j=0; j<9; j++){
            if(board[row][j] == ch){
                return false;
            }
        }
        
        // column element
        for(int i=0; i<9; i++){
            if(board[i][col] == ch){
                return false;
            }
        }
        
        // sub-matrix
        int smi = row / 3 * 3;
        int smj = col / 3 * 3;
        
        for(int i = 0 ; i < 3; i++){
        for(int j = 0 ; j < 3; j++){
            if(board[smi + i][smj + j] == ch){
                    return false; 
            }
            
           }
        }
            
        return true;
    } 
    
    // Only one solution so used boolean here
    public boolean solveSudoku(char[][] board, int row, int col){
        if(row == 9) return true;
        
        int nrow = 0;
        int ncol = 0;
        
        if(col == 8){
            nrow = row + 1;
            ncol = 0;
        }else{
            nrow = row;
            ncol = col + 1;
        }
        
        if(board[row][col] != '.'){
            boolean res = solveSudoku(board, nrow, ncol);
            if(res == true) return true;
        }else{
            for(int po = 1; po <= 9; po++){
                if(isValid(board, row, col,(char) (po + '0')) == true){
                    board[row][col] = (char) (po + '0');
                    boolean res = solveSudoku(board, nrow, ncol);
                    if(res == true) return true;
                    
                    board[row][col] = '.';
                }
            }
        }
        
        return false;
    }
    
    
    public void solveSudoku(char[][] board) {
        solveSudoku(board, 0, 0);
    }
}